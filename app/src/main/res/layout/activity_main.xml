<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Display Screen -->
    <TextView
        android:layout_marginTop="400px"
        android:id="@+id/display"
        android:layout_width="370dp"
        android:layout_height="132dp"
        android:layout_marginBottom="16dp"
        android:background="#E0E0E0"
        android:backgroundTint="@color/white"
        android:gravity="end"
        android:padding="16dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="24sp" />

    <!-- Button Grid -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_gravity="center">

        <!-- Number and Operator Buttons -->
        <Button
            android:id="@+id/btn_7"
            style="@style/CalcButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:background="@color/white"/>
        <Button android:id="@+id/btn_8" android:text="8" style="@style/CalcButton" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@color/white"/>
        <Button android:id="@+id/btn_9" android:text="9" style="@style/CalcButton" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@color/white"/>
        <Button android:id="@+id/btn_divide" android:text="/" style="@style/CalcButton" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@color/white" android:textColor="@color/orange"/>

        <Button android:id="@+id/btn_4" android:text="4" style="@style/CalcButton" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@color/white"/>
        <Button android:id="@+id/btn_5" android:text="5" style="@style/CalcButton" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@color/white"/>
        <Button android:id="@+id/btn_6" android:text="6" style="@style/CalcButton" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@color/white"/>
        <Button android:id="@+id/btn_multiply" android:text="*" style="@style/CalcButton" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@color/white" android:textColor="@color/orange"/>

        <Button android:id="@+id/btn_1" android:text="1" style="@style/CalcButton" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@color/white"/>
        <Button android:id="@+id/btn_2" android:text="2" style="@style/CalcButton" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@color/white"/>
        <Button android:id="@+id/btn_3" android:text="3" style="@style/CalcButton" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@color/white"/>
        <Button android:id="@+id/btn_subtract" android:text="-" style="@style/CalcButton" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@color/white" android:textColor="@color/orange"/>

        <Button android:id="@+id/btn_clear" android:text="C" style="@style/CalcButton" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@color/white" android:textColor="@color/orange"/>
        <Button android:id="@+id/btn_0" android:text="0" style="@style/CalcButton" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@color/white"/>
        <Button android:id="@+id/btn_equals" android:text="=" style="@style/CalcButton" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@color/orange" android:textColor="@color/white"/>
        <Button android:id="@+id/btn_add" android:text="+" style="@style/CalcButton" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@color/white" android:textColor="@color/orange"/>
    </GridLayout>
</LinearLayout>
